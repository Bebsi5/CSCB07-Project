<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/white"
tools:context=".events.AddEvent">

<RelativeLayout
    android:id="@+id/navigationBar"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_marginBottom="13dp"
    android:background="@color/white"
    app:layout_constraintBottom_toTopOf="@+id/label1"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <RelativeLayout
        android:id="@+id/backButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="18dp">

        <TextView
            android:id="@+id/label"
            android:layout_width="43dp"
            android:layout_height="24.5dp"
            android:layout_gravity="center_horizontal|center"
            android:layout_marginLeft="24dp"
            android:layout_marginTop="7dp"
            android:gravity="center"
            android:text="@string/back_button"
            android:textAppearance="@style/back_button" />

        <ImageView
            android:id="@+id/vector"
            android:layout_width="10.31dp"
            android:layout_height="15.94dp"
            android:layout_marginStart="7.31dp"
            android:layout_marginTop="11.31dp"
            android:src="@drawable/vector" />

    </RelativeLayout>
    <!-- Back Button -->

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backButton"
        android:gravity="center"
        android:text="@string/add_event_title"
        android:textAppearance="@style/nav_headline_1"
        tools:layout_editor_absoluteX="13dp"
        tools:layout_editor_absoluteY="55dp" />

</RelativeLayout>

<TextView
    android:id="@+id/label1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/navigationBar"
    android:layout_alignParentStart="true"
    android:layout_marginStart="23dp"
    android:layout_marginTop="13dp"
    android:layout_marginEnd="313dp"
    android:text="@string/event_name"
    android:textAppearance="@style/headline_7"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/navigationBar" />

<!--will need to add an action for actionDone.
You may need to listen for the "Done" action
and define what should happen when the user taps it,
typically by setting an OnEditorActionListener in your code.-->

<!-- Button at the Bottom -->

<TextView
    android:id="@+id/label2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/event_detail_name"
    android:layout_alignParentStart="true"
    android:layout_marginStart="23dp"
    android:layout_marginTop="13dp"
    android:layout_marginEnd="321dp"
    android:text="@string/event_date"
    android:textAppearance="@style/headline_7"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/event_detail_name" />

<TextView
    android:id="@+id/label3"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/event_date"
    android:layout_alignParentStart="true"
    android:layout_marginStart="23dp"
    android:layout_marginTop="14dp"
    android:layout_marginEnd="285dp"
    android:text="@string/event_participantLimit"
    android:textAppearance="@style/headline_7"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/event_date" />

<TextView
    android:id="@+id/label4"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_below="@id/participant_limit"
    android:layout_alignParentStart="true"
    android:layout_marginStart="23dp"
    android:layout_marginTop="15dp"
    android:layout_marginEnd="313dp"
    android:text="@string/event_details"
    android:textAppearance="@style/headline_7"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/participant_limit" />

<EditText
    android:id="@+id/event_detail_name"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_below="@id/navigationBar"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/input_text_box"
    android:hint="Input Text"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/label1" />

<EditText
    android:id="@+id/event_date"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_below="@id/event_detail_name"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/input_text_box"
    android:hint="Input Text"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/label2" />

<EditText
    android:id="@+id/participant_limit"
    android:layout_width="0dp"
    android:layout_height="40dp"
    android:layout_below="@id/event_date"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/input_text_box"
    android:hint="Input Text"
    android:inputType="number"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/label3" />

<EditText
    android:id="@+id/event_details"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/participant_limit"
    android:layout_alignParentStart="true"
    android:layout_alignParentEnd="true"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="14dp"
    android:background="@drawable/input_text_box"
    android:hint="Input Text"
    android:inputType="textMultiLine"
    android:textSize="16sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/label4" />

<Button
    android:id="@+id/add_event_Button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginStart="15dp"
    android:layout_marginEnd="15dp"
    android:layout_marginBottom="15dp"
    android:text="@string/add_button"
    android:textAppearance="@style/button"
    android:backgroundTint="@color/purple_200"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

