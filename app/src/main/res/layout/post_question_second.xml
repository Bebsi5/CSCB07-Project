<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <!-- WORK IN PROGRESS -->

    <!--Questionnaire split into 3 different pages:
    - basic info (which program user is in, which post they want to check,
      what courses they have completed thus far)
    - enter GPA for each course using radio buttons (radio buttons must be separated
      into groups such that only one button can be selected for each button
    - final page that displays result of questionnaire

    current xml is the second page of the questionnaire
    -->

    <!-- Nested Scroll view -->
    <!-- allows user to scroll down the screen -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginTop="50dp"
                android:id="@+id/random_title"
                android:text="Random Title"
                android:textSize="20sp"
                />

            <!-- Add selection bubbles -->
            <TextView
                android:id="@+id/question1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Select what your GPA is for this course."
                android:textSize="15sp"
                />

            <RadioGroup
                android:id="@+id/answerRadioGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                >

                <RadioButton
                    android:id="@+id/option1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0" />

                <RadioButton
                    android:id="@+id/option2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.7" />

                <RadioButton
                    android:id="@+id/option3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.3" />

                <RadioButton
                    android:id="@+id/option4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.0" />

                <RadioButton
                    android:id="@+id/option5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.7" />

                <RadioButton
                    android:id="@+id/option6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3" />

                <RadioButton
                    android:id="@+id/option7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.0" />

                <RadioButton
                    android:id="@+id/option8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.7" />

                <RadioButton
                    android:id="@+id/option9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.3" />

                <RadioButton
                    android:id="@+id/option10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0" />

                <RadioButton
                    android:id="@+id/option11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.7" />

                <RadioButton
                    android:id="@+id/option12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0" />

            </RadioGroup>

            <TextView
                android:id="@+id/question2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="30dp"
                android:layout_marginTop="20dp"
                android:gravity="left"
                android:text="Select what your GPA is for this course."
                android:textSize="15sp"
                />

            <RadioGroup
                android:id="@+id/answerRadioGroup2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                >

                <RadioButton
                    android:id="@+id/option13"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0" />

                <RadioButton
                    android:id="@+id/option14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.7" />

                <RadioButton
                    android:id="@+id/option15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.3" />

                <RadioButton
                    android:id="@+id/option16"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3.0" />

                <RadioButton
                    android:id="@+id/option17"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.7" />

                <RadioButton
                    android:id="@+id/option18"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.3" />

                <RadioButton
                    android:id="@+id/option19"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2.0" />

                <RadioButton
                    android:id="@+id/option20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.7" />

                <RadioButton
                    android:id="@+id/option21"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.3" />

                <RadioButton
                    android:id="@+id/option22"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1.0" />

                <RadioButton
                    android:id="@+id/option23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.7" />

                <RadioButton
                    android:id="@+id/option24"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0.0" />

            </RadioGroup>

            <Button
                android:id="@+id/nextButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:text="Next page"
                />

            <Button
                android:id="@+id/previousButton"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="100dp"
                android:layout_marginRight="100dp"
                android:text="Previous page" />

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</RelativeLayout>
